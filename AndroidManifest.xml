        <activity android:name="my.gym.workoutsActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.workoutDetailsActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.DietPlansActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.DietDetailsActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.StoreActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.ProductDetailsActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.ExercisesActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity
            android:name="my.gym.ExerciseDetailsActivity"
            android:label="Exercise Details"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.categoriesActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.categoryProductsActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.BodybartsActivity"
            android:screenOrientation="portrait"
