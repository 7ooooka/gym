            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.LostFatActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.TransformActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.CalculatorActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="my.gym.SettingActivity"
            android:screenOrientation="portrait"
            ></activity>

    </application>
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>